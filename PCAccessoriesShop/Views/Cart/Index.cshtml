@model List<PCAccessoriesShop.ViewModels.CartItemViewModel>

@{
    ViewData["Title"] = "Моята количка";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Моята количка</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Количката е празна. <a asp-controller="Products" asp-action="Index" class="text-decoration-none">Разгледай продукти</a>
        </div>
    }
    else
    {
        <div class="glass-container mx-auto p-4">
            <table class="table table-hover shadow">
                <thead class="table-dark">
                    <tr>
                        <th>Продукт</th>
                        <th>Цена (лв.)</th>
                        <th>Количество</th>
                        <th>Общо (лв.)</th>
                        <th class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice.ToString("F2")</td>
                            <td>@item.Quantity</td>
                            <td>@(item.UnitPrice * item.Quantity).ToString("F2")</td>
                            <td class="text-center">
                                <form asp-action="Remove" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Премахни</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Общо:</th>
                        <th colspan="2">@Model.Sum(i => i.UnitPrice * i.Quantity).ToString("F2") лв.</th>
                    </tr>
                </tfoot>
            </table>

            <div class="text-end mt-4">
                <form asp-controller="Orders" asp-action="Checkout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-success btn-lg">Завърши поръчка</button>
                </form>
            </div>
        </div>
    }
</div>
