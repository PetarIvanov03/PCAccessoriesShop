@model PCAccessoriesShop.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Изтрий категория";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-danger">Сигурни ли сте, че искате да изтриете тази категория?</h2>

    <div class="glass-container mx-auto p-4">
        <dl class="row">
            <dt class="col-sm-4">Име</dt>
            <dd class="col-sm-8">@Model.Name</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger me-2">Изтрий</button>
            <a asp-action="Index" class="btn btn-secondary">Отказ</a>
        </form>
    </div>
</div>
