@model PCAccessoriesShop.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="glass-container mx-auto p-5 shadow-lg" style="max-width: 500px;">
        <h4 class="text-center text-danger mb-4">Are you sure you want to delete this category?</h4>

        <div class="mb-4 text-center">
            <div class="fw-bold">Name</div>
            <div>@Model.Name</div>
        </div>

        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
