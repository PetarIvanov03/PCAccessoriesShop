@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid p-0">

    <div class="hero d-flex align-items-center" style="height: 100vh;">
        <div class="glass-container mx-auto" style="max-width: 1200px;">
            <div class="row align-items-center">

                <div class="col-12 col-md-7 text-white text-start ps-4 pe-5">
                    <h1 class="display-2 fw-bold">Welcome!</h1>
                    <p class="lead fs-4 mt-3">
                        Browse our catalog of computer accessories and parts.
                    </p>
                </div>


                <div class="col-12 col-md-5 text-center">
                    <a asp-controller="Products" asp-action="Index"
                       class="btn btn-outline-light btn-lg py-3 px-5 mt-4 mt-md-0">
                        Check all our products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
